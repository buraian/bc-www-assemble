---
layout: up.hbs
---
<article id="article" class="article full">
  <div id="secondaryStack" class="portfolioStack">
    {{!-- <a class="offCanvasToggle" href="#"></a> --}}
    <header>
      {{!-- <span class="section">{{page.section}}</span> --}}
      <span class="tag">{{page.tags}}</span>
      <h2>{{title}}</h2>
    </header>
    <section class="description">
      <p>{{description}}</p>
    </section>

    {{#if metadata}}

      <section id="metaData" class="metaData">

        {{#if metadata.designCredit}}
          <dl>
            <dt>Design Credit</dt>
            {{#each metadata.designCredit}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}

        {{#if metadata.buildCredit}}
          <dl>
            <dt>Build Credit</dt>
            {{#each metadata.buildCredit}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}

        {{#if metadata.typography}}
          <dl>
            <dt>Typography</dt>
            {{#each metadata.typography}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}

        {{#if metadata.dimensions}}
          <dl>
            <dt>Dimensions</dt>
            {{#each metadata.dimensions}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}

        {{#if metadata.client}}
          <dl>
            <dt>Client</dt>
            {{#each metadata.client}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}

        {{#if metadata.productionTime}}
          <dl>
            <dt>Production Time</dt>
            {{#each metadata.productionTime}}
              <dd>{{.}}</dd>
            {{/each}}
          </dl>
        {{/if}}
      </section>

    {{/if}}

  </div>
  <div class="views">
    <nav class="tabs">
      <ul>
        <li>
          {{#if liveURL}}
            <a href="#liveWrap" class="show-for-large-up">Live Preview<br><small>All systems go</small></a>
            <a href="{{liveURL}}" class="hide-for-large-up" target="_blank">Launch<br><small>All systems go</small></a>
          {{/if}}
          {{#unless liveURL}}
            <div>Live Preview<br><small>Not available</small></div>
          {{/unless}}
        </li>
        <li>
          {{#if images}}
            <a href="#thumbnails" class="default">Screenshots<br><small>Click to enlarge</small></a>
          {{/if}}
          {{#unless images}}
            <div>Screenshots<br><small>No screenshots available</small></div>
          {{/unless}}
        </li>
      </ul>
    </nav>

    {{#if liveURL}}

      <section id="liveWrap" class="liveWrap show-for-large-up">
        <iframe id="live" class="live" src="{{liveURL}}"></iframe>
      </section>

    {{/if}}

    {{#if images}}

      <section id="thumbnails" class="thumbnails">
        {{#each images}}
          <figure class="tile thumbnail">
            <a href="{{this.full.pathTo1x}}" title="{{this.description}}"{{#if this.full.pathTo2x}} data-lightbox-hidpi="{{this.full.pathTo2x}}"{{/if}} data-lightbox-gallery="0" rel="enlarge">
              <img src="{{this.thumbnail.pathTo2x}}" alt="{{this.description}}">
            </a>
          </figure>
        {{/each}}
      </section>

    {{/if}}

  </div>
</article>
